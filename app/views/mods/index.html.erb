<div class='d-flex flex-column align-items-center gap-3 py-3'>
    <% @mods.each do |mod| %>
        <div class='card w-50'>
            <div class='card-body'>
                <h5 class='card-title'>
                    <a href=<%= mod_path(mod) %>>
                        <h5><%= mod.course_code %></h5>
                    </a>
                <p class='card-text'><%= mod.title %></p>
            </div>
        </div>
    <% end %>
</div>