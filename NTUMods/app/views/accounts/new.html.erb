<div class='d-flex flex-column align-items-center'>
    <%= form_with model: @account do |form| %>
        <div class='mb-3'>
            <%= form.label :username, class: 'form-label' %><br>
            <%= form.text_field :username, class: 'form-control' %>
            <% @account.errors.full_messages_for(:username).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>

        <div class='mb-3'>
            <%= form.label :password, class: 'form-label' %><br>
            <%= form.password_field :password, class: 'form-control' %>
            <% @account.errors.full_messages_for(:password).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>

        <div>
            <%= form.submit 'Sign up', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>